@model Calculator

@{
    ViewBag.Title = "Tip Calculator";
}
<html>
    <head>
        <title>Tip Calculator</title>
    </head>

    <style>

    </style>
<body>

<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div>
         <label asp-for="Cost">Cost of meal:</label>
        <input asp-for="Cost" />
    </div>
     <div>
        <label class="col 2">15% tip:</label>
        <label class="col 2">@ViewBag.FifteenPerTip.ToString("C2")</label>
    </div>
     <div>
        <label>20% tip:</label>
        <label>@ViewBag.TwentyPerTip.ToString("C2")</label>
    </div>
     <div>
        <label>25% tip:</label>
        <label>@ViewBag.TwentyFivePerTip.ToString("C2")</label>        
    </div>
    <button type="submit">Calculates</button>
    <a asp-action="Index">Clear</a>
</form>
</body>
 </html>